.login{
  width:100%;
  height:900px;
  background-image:url('../../img/北京邮电大学.png');
  background-size:100% 100%;
  overflow:auto;
  .login-header{
    display:flex;
    align-items: center;
    height:80px;
    background-color:rgba(21,20,13,0.5);
    h1{
      font-size: 30px;
      cursor:pointer;
      color:white;
      margin-left:30px;
    }
    h1:hover {
      color:red;
    }
  }
  .login-content{
    width:400px;
    height:400px;
    background-color: white;
    margin:100px auto;
    padding:20px 40px;
    border-radius: 10%;
    h2{
      font-size: 30px;
      text-align: center;
      font-weight: bold;
      
    }
    .login-form{
      .login-form-button{
        width:100%;
      }
    }
  }
   .registry-content{
    width:900px;
    height:650px;
    background-color: white;
    margin:60px auto;
    padding:20px 40px;
    border-radius: 10%;
    h2{
      font-size: 30px;
      text-align: center;
      font-weight: bold;

    }
    .registry-form{
      .registry-form-button{
        width:100%;
      }
    }
  }
}